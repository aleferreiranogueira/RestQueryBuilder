{
    "name": "aleferreiranogueira/restquerybuilder",
    "type": "library",
    "description": "A simple HTTP Query Builder for Laravel 5.x",
    "keywords": [
        "AleFerreiraNogueira",
        "RestQueryBuilder"
    ],
    "homepage": "https://github.com/AleFerreiraNogueira/RestQueryBuilder",
    "license": "MIT",
    "authors": [
        {
            "name": "Alexandre Ferreira Nogueira",
            "email": "ale.ferreiranogueira@gmail.com",
            "homepage": "https://github.com/AleFerreiraNogueira",
            "role": "Developer"
        }
    ],
    "require": {
        "illuminate/support": "~5.1",
        "php" : "~5.6|~7.0"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=5.4.3",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "AleFerreiraNogueira\\RestQueryBuilder\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AleFerreiraNogueira\\RestQueryBuilder\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
